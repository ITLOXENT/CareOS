{
  "name": "careos-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "openapi:generate": "cd apps/api && DJANGO_SETTINGS_MODULE=careos_api.settings.test uv run python manage.py generate_openapi --output ../../openapi.json",
    "sdk:generate": "python3 scripts/sdk/generate.py",
    "sdk:check": "python3 scripts/sdk/generate.py --check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "build": "turbo run build",
    "audit": "pnpm audit"
  },
  "devDependencies": {
    "prettier": "3.8.1",
    "turbo": "2.3.3",
    "typescript-eslint": "8.18.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "@types/react": "19.2.0",
      "@types/react-dom": "19.2.0",
      "eslint": "^9.26.0",
      "@eslint/plugin-kit": "^0.3.4"
    }
  }
}
